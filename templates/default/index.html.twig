{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}

  <div class="container">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="http://www.freewings.me/uploads/links/788cfba8fe436c5845b9c6d7fdbf3952fffe61c6.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="http://www.freewings.me/uploads/links/788cfba8fe436c5845b9c6d7fdbf3952fffe61c6.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="http://www.freewings.me/uploads/links/788cfba8fe436c5845b9c6d7fdbf3952fffe61c6.jpg" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
  <main class="container mt-3">


      <div id="wall-paintings-recommended" class="row">
          {% for wallPainting in wallPaintingsRecommended %}
              <div class="col-3">
                  {% if wallPainting.thumbImage and wallPainting.thumbImage.filename %}
                      <div class="wall-painting">
                          <a href="{{ path('wall_painting_show', {id : wallPainting.id}) }}"><img class="img-fluid" src="{{ vich_uploader_asset(wallPainting.thumbImage, 'file')}}" alt=""></a>
                          <h3>{{ wallPainting.title }}</h3>
                          <p>{{ wallPainting.brief }}</p>
                      </div>
                  {% endif %}
              </div>
          {% endfor %}
      </div>

      <div id="wall-painting-categroies-recommended" class="row">
          {% for wallPaintingCategory in wallPaintingCategoriesRecommended %}
              <div class="col-3">
                  {% if wallPaintingCategory.thumbImage and wallPaintingCategory.thumbImage.filename %}
                      <div class="wall-painting-category">
                          <a href="{{ path('wall_painting_index', { category : wallPaintingCategory.id }) }}"><img class="img-fluid" src="{{ vich_uploader_asset(wallPaintingCategory.thumbImage, 'file')}}" alt=""></a>
                          <h3>{{ wallPaintingCategory.name }}</h3>
                      </div>
                  {% endif %}
              </div>
          {% endfor %}
      </div>

      <div class="customer-recommended-header">隐形翅膀提供专业的空间艺术化服务，帮助客户达到更好的艺术体验和传播</div>
      <div id="customer-recommended" class="row">
          {% for customer in customersRecommended %}
              <div class="col-2">
                  <div class="customer">
                      <a href="{{ path('customer_show', { id: customer.id }) }}"><img class="img-fluid" src="{{ vich_uploader_asset(customer.thumbImage, 'file')}}" alt="{{ customer.title }}"></a>
                  </div>
              </div>
          {% endfor %}
      </div>

      <div class="customer-recommended-header">隐形翅膀团队只专注做一件事情，在墙上画画</div>
      <div id="customer-recommended" class="row">
          {% for artist in artistsRecommended %}
              <div class="col">
                  {%  if artist.figureImage %}
                  <div class="customer">
                      <a href="{{ path('artist_show', { id: artist.id }) }}"><img class="img-fluid" src="{{ vich_uploader_asset(artist.figureImage, 'file')}}" alt="{{ artist.username }}"></a>
                  </div>
                  {% endif %}
              </div>
          {% endfor %}
      </div>

  </main>

{% endblock %}
