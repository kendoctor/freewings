{% extends 'admin.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>TitlePicture</th>
                <td>{{ post.titlePicture }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-sm btn-info"  href="{{ path('admin_post_index') }}">back to list</a>

    <a class="btn btn-sm btn-info"  href="{{ path('admin_post_edit', {'id': post.id}) }}">edit</a>

    {{ include('post/admin/_delete_form.html.twig') }}
{% endblock %}