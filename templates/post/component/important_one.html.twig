{% if post %}
<div class="jumbotron p-3 p-md-5 text-white rounded bg-dark">
    <div class="col-md-6 px-0">
        <h1 class="display-4 font-italic">{{ post.title }}</h1>
        <p class="lead my-3">{{ post.content | raw}}</p>
        <p class="lead mb-0"><a href="{{ path('frontend_post_show', { id: post.id}) }}" class="text-white font-weight-bold">Continue reading...</a></p>
    </div>
</div>
{% endif %}
