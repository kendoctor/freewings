    <body class="">

    <nav class="navbar navbar-expand navbar-dark bg-dark flex-md-nowrap p-0 sticky-top">
        <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="#">Symfans CMS</a>
        <ul class="navbar-nav flex-row d-md-flex ml-md-auto px-3">
            <li class="nav-item dropdown mr-md-2">
                <a class="dropdown-toggle" data-toggle="dropdown" href="javascript:;" aria-haspopup="true" aria-expanded="false">
                    <img class="rounded-circle" src="{{ asset('assets/images/avatar3_small.jpg') }}" alt="">
                    <span class="username">{{ app.user.email }}</span>
                </a>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <a class="dropdown-item" href="#">{{ 'user.profile'|trans }}</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="dropdown-item" href="{{ path('logout') }}">{{ 'authentication.logout'|trans }}</a>
                    {% else %}
                        <a class="dropdown-item" href="{{ path('login') }}">{{ 'authentication.login'|trans }}</a>
