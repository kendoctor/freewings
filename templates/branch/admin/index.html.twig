{% extends 'admin.html.twig' %}

{% block title %}Branch index{% endblock %}

{% block body %}
    <div class="page">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">{{ 'admin.home'|trans }}</a></li>
                <li class="breadcrumb-item"><a href="#">{{ 'branch.management'|trans }}</a></li>
                <li class="breadcrumb-item"><a href="#">{{ 'branch.index'|trans }}</a></li>
            </ol>
        </nav>

        <h1 class="mb-3">{{ 'branch.index_title'|trans }}({{ branches|length }})</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Mobile</th>
                <th>QQ</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for branch in branches %}
                <tr>
                    <td>{{ branch.id }}</td>
                    <td>{{ branch.address }}</td>
                    <td>{{ branch.phone }}</td>
                    <td>{{ branch.mobile }}</td>
                    <td>{{ branch.qq }}</td>
                    <td>{{ branch.email }}</td>
                    <td>
                        <a href="{{ path('admin_branch_edit', {'id': branch.id}) }}">{{ 'branch.edit'|trans }}</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a  class="btn btn-primary" href="{{ path('admin_branch_new') }}">{{ 'branch.new'|trans }}</a>
    </div>

{% endblock %}