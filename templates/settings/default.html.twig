{% extends 'admin.html.twig' %}

{% block title %}Settings{% endblock %}
{% block body %}

    <h1 class="mb-4">{{ "Settings" }}</h1>



    <div class="row">
        <div class="col-2">
            <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist">
                {% for sec in sections %}
                    {% set isActive = sec.name == section.name %}
                    <a class="nav-link {{ isActive ? ' active' : '' }}"
                       href="{{ path('my_phpmob_settings', { section: sec.name }) }}">
                        {{ sec.label|trans }}
                    </a>
                {% endfor %}
            </div>
        </div>
        <div class="col-10">
            <h2>{{ section.label|trans }}</h2>
            {% if section.description %}
                <h6>{{ section.description|trans }}</h6>
            {% endif %}
            <hr/>
            {{ form_start(form) }}
            {{ form_errors(form) }}
            {# need to custom form view to use form.XXX.vars['description'] #}
            {{ form_row(form, { label: false }) }}
            <button type="submit">Update</button>
            {{ form_end(form) }}
        </div>
    </div>



{% endblock %}