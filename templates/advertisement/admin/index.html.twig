{% extends 'admin.html.twig' %}

{% block title %}Advertisement index{% endblock %}

{% block body %}
    <div class="page">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">{{ 'admin.home'|trans }}</a></li>
                <li class="breadcrumb-item"><a href="#">{{ 'advertisement.management'|trans }}</a></li>
                <li class="breadcrumb-item"><a href="#">{{ 'advertisement.index'|trans }}</a></li>
            </ol>
        </nav>

        <h1 class="mb-3">{{ 'advertisement.index'|trans }}({{ pagination.totalItemCount }})</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>{{ knp_pagination_sortable(pagination, 'advertisement.index.id'|trans, 'ad.id') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'advertisement.index.title'|trans, 'ad.title') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'advertisement.index.weight'|trans, 'ad.weight') }}</th>
                    <th>{{ 'admin.actions' | trans }}</th>
                </tr>
            </thead>
            <tbody>
            {% for advertisement in pagination %}
                <tr>
                    <td>{{ advertisement.id }}</td>
                    <td>{{ advertisement.title }}</td>
                    <td>{{ advertisement.link }}</td>
                    <td>{{ advertisement.weight }}</td>
                    <td>
                        <a href="{{ path('admin_advertisement_edit', {'id': advertisement.id}) }}">{{ 'advertisement.edit'|trans }}</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>

        <a  class="btn btn-primary" href="{{ path('admin_advertisement_new') }}">{{ 'advertisement.new'|trans }}</a>
    </div>
{% endblock %}