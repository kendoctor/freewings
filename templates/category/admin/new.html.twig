{% extends 'admin.html.twig' %}

{% block title %}New Category{% endblock %}

{% block body %}

    <div class="page">

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">{{ 'admin.home'|trans }}</a></li>
                <li class="breadcrumb-item"><a href="#">{{ 'category.index'|trans }}</a></li>
                <li class="breadcrumb-item"><a href="#">{{ postType }}</a></li>
                <li class="breadcrumb-item"><a href="#">{{ 'category.new'|trans }}</a></li>
            </ol>
        </nav>

        <h1 class="page-header">{{ 'category.new_title'|trans }} </h1>
        <blockquote class="blockquote">
            {{ 'category.parent_title'|trans }} : {{ category.parent.name }}
        </blockquote>

        <hr>
        {{ include('category/admin/_form.html.twig') }}

        <hr>
        <a class="btn btn-secondary" href="{{ path('admin_category_index', {'postType': postType}) }}">back to list</a>

    </div>
{% endblock %}