{% extends 'admin.html.twig' %}

{% block title %}Edit Category{% endblock %}

{% block body %}
    <div class="page">

        <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">{{ 'admin.home' | trans }}</a></li>
            <li class="breadcrumb-item"><a href="#">{{ 'category.management'|trans }}</a></li>
            <li class="breadcrumb-item"><a href="#">{{ postType | trans }}</a></li>
            <li class="breadcrumb-item"><a href="#">{{ 'category.edit'|trans }}</a></li>
        </ol>
    </nav>
        <h1>{{ 'category.edit_title' | trans }}</h1>
        <blockquote class="blockquote">
            {{ 'category.parent_title'|trans }} :  {% if category.parent.lvl > 0 %} {{ category.parent.name }} {% else %}  {{ category.parent.name | trans }} {% endif %}
        </blockquote>


        {{ include('category/admin/_form.html.twig', {'button_label': 'Update'}) }}
        <hr>
        <a class="btn btn-secondary" href="{{ path('admin_category_index', {'postType': postType}) }}">{{ 'category.back_to_list' | trans }}</a>
    </div>
{% endblock %}