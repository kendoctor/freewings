{% extends 'admin.html.twig' %}

{% block title %}Tag index{% endblock %}

{% block body %}
    <div class="page">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">{{ 'admin.home'|trans }}</a></li>
                <li class="breadcrumb-item"><a href="#">{{ 'tag.management'|trans }}</a></li>
                <li class="breadcrumb-item"><a href="#">{{ 'tag.index'|trans }}</a></li>
            </ol>
        </nav>

        <h1 class="mb-3">{{ 'tag.index'|trans }}({{ pagination.totalItemCount }})</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>CreatedAt</th>
                    <th>UpdatedAt</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for tag in pagination %}
                <tr>
                    <td>{{ tag.id }}</td>
                    <td>{{ tag.name }}</td>
                    <td>{{ tag.createdAt ? tag.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ tag.updatedAt ? tag.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ path('admin_tag_edit', {'id': tag.id}) }}">{{ 'tag.edit'|trans }}</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>

        <a  class="btn btn-primary" href="{{ path('admin_tag_new') }}">{{ 'tag.new'|trans }}</a>
    </div>
{% endblock %}